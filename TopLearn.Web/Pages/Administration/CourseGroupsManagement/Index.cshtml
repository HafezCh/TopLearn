@page
@model TopLearn.Web.Pages.Administration.CourseGroupsManagement.IndexModel
@{
    ViewData["Title"] = "لیست گروه ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست گروه ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست گروه های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateGroup" class="btn btn-outline btn-success">افزودن گروه جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان گروه</th>
                                    <th>زیر گروه ها</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var group in Model.CourseGroups.Where(g => g.ParentId == null))
                                {
                                    <tr>
                                        <td>@group.GroupTitle</td>
                                        <td>
                                            @if (group.CourseGroups.Any())
                                            {
                                                <ul>
                                                    @foreach (var sub in group.CourseGroups)
                                                    {
                                                        <li>
                                                            @sub.GroupTitle -    <a asp-page="EditGroup" asp-route-id="@sub.GroupId" class="btn btn-outline btn-warning btn-xs">
                                                                ویرایش
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                        </td>
                                        <td>
                                            <a asp-page="CreateGroup" asp-route-id="@group.GroupId" class="btn btn-info btn-sm">
                                                افزودن زیر گروه
                                            </a>
                                            <a asp-page="EditGroup" asp-route-id="@group.GroupId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>