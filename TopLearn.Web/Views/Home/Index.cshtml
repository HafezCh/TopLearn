@using TopLearn.Core.DTOs.Course
@model Tuple<List<TopLearn.Core.DTOs.Course.ShowCourseListItemViewModel>,int>
@{
    ViewData["Title"] = "Home Page";
    var popularCourses = ViewBag.PopularCourses as List<ShowCourseListItemViewModel>;
}

@section SearchBox{
    <header>
        <a href="" class="logo"><img src="~/images/logo.png"></a>
        <h1> با اساتید مجرب و کارآزموده در خودآموز تاپ لرن </h1>
        <h2> آموزش ببینید ، تجربه کسب کنید و بازار کار شوید </h2>
        <h3> با کمترین هزینه خودت یاد بگیر </h3>
    </header>
    <div class="search-form">
        <form asp-controller="Course" asp-action="Index" method="get">
            <input type="text" name="filter" placeholder="چی دوست داری یاد بگیری ؟">
            <button><i class="zmdi zmdi-search"></i></button>
        </form>
    </div>
}

    <main id="home-page">
        <div class="container">
            <section class="terms-items">
                <header>
                    <h2> آخرین دوره های تاپ لرن </h2>
                    <a href=""> مشاهده همه دوره ها </a>
                </header>
                <div class="row">
                    <!-- col -->
                @foreach (var course in Model.Item1)
                {
                    <partial name="_BoxCourse" model="course" />
                }
                <!-- /col -->
            </div>
        </section>

        <hr>

        <section class="terms-items">
            <header>
                <h2> دوره های محبوب تاپ لرن </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            <div class="row">
                <!-- col -->
                @if (popularCourses != null)
                {
                    @foreach (var course in popularCourses)
                    {
                        <partial name="_BoxCourse" model="course" />
                    }
                }
                <!-- /col -->
            </div>
        </section>
    </div>
</main>
